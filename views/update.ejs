<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="card_id">SELECT A CARD TO UPDATE</label><br/>
    <select id="card_id" name="card_id">
    <% if(typeof cards != "undefined" && cards.length > 0){ %>
      <% cards.forEach(function(card){ %>
        <option value="<%= card.id %>">
          <%= card.lastName + ", " +  card.firstName %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<form method="POST" action="/create" class="form-horizontal" id="addCard">
