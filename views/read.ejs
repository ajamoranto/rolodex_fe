<%- partial ('partials/statusmessage.ejs') %>

  <!-- <h2>Cards</h2> -->
  <div id="tableBackground">


  <table class="table table-bordered" id="cardTable" style="width:100%">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>View Card Details</th>
        <th style="display: none">Title</th>
        <th style="display: none">Company</th>
        <th style="display: none">Street</th>
      </tr>
    </thead>
    <tbody>
      <% if(typeof cards != "undefined" && cards.length > 0){ %>
        <% cards.forEach(function(card){ %>
          <tr data-id="<%= card.id %>">
            <td class="card-first-name">
              <%= card.firstName %>
            </td>
            <td class="card-last-name">
              <%= card.lastName %>
            </td>
            <td><a href="#" class="btn btn-info view-card">Details</a></td>
            <td class="card-title" style="display: none">
              <%= card.title %>
            </td>
            <td class="card-company" style="display: none">
              <%= card.company %>
            </td>
            <td class="card-street" style="display: none">
              <%= card.street %>
            </td>
          </tr>
          <% }) %>
            <% } %>
    </tbody>
  </table>
</div>

  <div class="modal fade" id="cardWindow">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">NAME GOES HERE</h4>
        </div>
        <div class="modal-body">
          <p id="blah"></p>
          <p id="blah2"></p>
          <p id="blah3"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
